<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Sample Category"
            id="sample">
      </category>
      <view
            id="com.diabolo.eclipse.bitbucket.views.BrowserView"
            name="Browser View"
            icon="icons/sample.png"
            class="com.diabolo.eclipse.bitbucket.views.BrowserView"
            category="sample"
            inject="true">
      </view>
      <view
            id="com.example.test"
            name="My Common Navigator"
            icon="icons/sample.png"
            class="org.eclipse.ui.navigator.CommonNavigator">
      </view>
      <category
            name="Sample Category"
            id="com.diabolo.eclipse.bitbucket">
      </category>
      <view
            id="com.diabolo.eclipse.bitbucket.views.PullRequestsView"
            name="Pull Requests"
            icon="icons/sample.png"
            class="com.diabolo.eclipse.bitbucket.views.PullRequestsView"
            category="com.diabolo.eclipse.bitbucket"
            inject="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerActionBinding
            viewerId="com.example.test">
         <includes>
            <actionExtension
                  pattern="org.eclipse.ui.navigator.resources.*">
            </actionExtension>
         </includes>
      </viewerActionBinding>
      <viewerContentBinding
            viewerId="com.example.test">
         <includes>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resourceContent">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.filters.*">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.linkHelper">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.workingSets">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="com.diabolo.eclipse.bitbucket.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="com.diabolo.eclipse.bitbucket.commands.category"
            name="Sample Command"
            id="com.diabolo.eclipse.bitbucket.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.diabolo.eclipse.bitbucket.handlers.SampleHandler"
            commandId="com.diabolo.eclipse.bitbucket.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.diabolo.eclipse.bitbucket.commands.sampleCommand"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="com.diabolo.eclipse.bitbucket.menus.sampleMenu"
               label="Sample Menu"
               mnemonic="M">
            <command
                  commandId="com.diabolo.eclipse.bitbucket.commands.sampleCommand"
                  id="com.diabolo.eclipse.bitbucket.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="com.diabolo.eclipse.bitbucket.toolbars.sampleToolbar">
            <command
                  id="com.diabolo.eclipse.bitbucket.toolbars.sampleCommand"
                  commandId="com.diabolo.eclipse.bitbucket.commands.sampleCommand"
                  icon="icons/sample.png"
                  tooltip="Say hello world">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            id="com.diabolo.eclipse.bitbucket.preferences.BitBucketPreferencePage"
            name="BitBucket Preferences"
            class="com.diabolo.eclipse.bitbucket.preferences.BitBucketPreferencePage">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.diabolo.eclipse.bitbucket.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
